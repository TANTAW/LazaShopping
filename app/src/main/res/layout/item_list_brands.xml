<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/round_corner_gray"
    android:padding="12dp">


    <RelativeLayout
        android:id="@+id/imageRelative"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_corner_white">

        <ImageView
            android:id="@+id/brandIconId"
            android:layout_width="25dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:src="@drawable/nike" />

    </RelativeLayout>

    <TextView
        android:id="@+id/brandNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/imageRelative"
        android:fontFamily="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Adidas" />
</RelativeLayout>